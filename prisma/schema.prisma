
generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  // url      = env("DATABASE_URL")
}


model Company {
  id          String   @id @default(uuid())
  name        String
  adminEmail  String   @unique
  createdAt   DateTime @default(now())
    isActive      Boolean   @default(true)
  deactivatedAt DateTime?
  whitelistedIpRanges WhitelistedIpRange[]
  employees   Employee[]
  payrolls    Payroll[]
  attendances Attendance[]
  leaves      Leave[]
  leaveTypes  LeaveType[]
  shifts      Shift[]
  auditLogs   AuditLog[]
  departments     Department[]
}

model Department {
  id        String     @id @default(uuid())
  companyId String
  name      String

  // Relations
  company   Company    @relation(fields: [companyId], references: [id])
  employees Employee[] // Relation to the employees in this department
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([companyId])
  @@unique([companyId, name]) // Ensures a company can't have two departments with the same name
}

model WhitelistedIpRange {
  id           String @id @default(uuid())
  companyId    String 
  company      Company @relation(fields: [companyId], references: [id])
  minIpRange   String // e.g., "192.168.0.1"
  maxIpRange   String // e.g., "192.168.0.255"
  createdAt    DateTime @default(now())
  @@index([companyId])
}

model Employee {
  id             String   @id @default(uuid())
  companyId      String?
  name           String
  email          String   @unique
  hashedPassword String?
  avatarUrl     String?      // Optional avatar URL
  isActive      Boolean      @default(true) // Employee can be deactivated
  role           Role     @default(EMPLOYEE)
  approvedDeviceIds String[] @default([])
  unverifiedDeviceIds String[]  @default([]) 
  permissions    String[] @default([])
  departmentId     String?
  baseSalary     Float    @default(30000.0)
  hourlyRate     Float?   // Auto-calc: baseSalary / 160
  allowances     Json?    // e.g., { medical: 2000 }
  joinDate       DateTime @default(now())
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  company        Company? @relation(fields: [companyId], references: [id])
  department       Department? @relation(fields: [departmentId], references: [id])
  
  shiftId          String?
  shift            Shift?       @relation(fields: [shiftId], references: [id])

  payrolls       Payroll[]
  attendances    Attendance[]
  leaves         Leave[]
  decidedLeaves  Leave[] @relation("LeaveDecider")
  auditLogs      AuditLog[]
}

model Payroll {
  id             String   @id @default(uuid())
  companyId      String
  empId          String
  startDate      DateTime
  endDate        DateTime
  gross          Float
  deductions     Float
  net            Float
  regularHours   Float
  overtimeHours  Float
  isPaid         Boolean  @default(false)
  paidDate       DateTime?
  note           String?  // e.g., 'Live Preview'
  createdAt      DateTime @default(now())
  company        Company  @relation(fields: [companyId], references: [id])
  employee       Employee @relation(fields: [empId], references: [id])
}

model Attendance {
  id         String   @id @default(uuid())
  companyId  String
  empId      String
  timestamp  DateTime @default(now())
  type       AttType  @default(CHECK_IN)
  loggedIp            String
  deviceId            String
  verificationStatus  VerificationStatus  @default(REMOTE)
  isSuspicious        Boolean             @default(false)
  // Store raw IP lookup data or location info
  ipCheckDetails      Json?
  // NEW: which shift was applied when creating this record
  shiftId             String?
  shift               Shift?   @relation(fields: [shiftId], references: [id])
  // NEW: for CHECK_IN
  scheduledStartTime  DateTime?
  checkInDelayMinutes Int?
  // NEW: for CHECK_OUT
  scheduledEndTime      DateTime?
  earlyCheckoutMinutes  Int?
  company    Company  @relation(fields: [companyId], references: [id])
  employee   Employee @relation(fields: [empId], references: [id])
}

model Leave {
  id           String   @id @default(cuid())
  companyId    String
  empId        String
  leaveTypeId  String
  startDate    DateTime
  endDate      DateTime
  duration     Int
  status       LeaveStatus @default(PENDING)
  isPaid       Boolean
  reason       String? // employee reason

  decisionNote String?      // HR/Admin note (optional)
  decidedById  String?      // who approved/rejected
  decidedBy    Employee?    @relation("LeaveDecider", fields: [decidedById], references: [id])

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  company      Company  @relation(fields: [companyId], references: [id])
  employee     Employee @relation(fields: [empId], references: [id])
  leaveType    LeaveType @relation(fields: [leaveTypeId], references: [id])
}



model LeaveType {
  id               String   @id @default(uuid())
  companyId        String
  name             String          // "Sick Leave"
  code             String          // "SL"
  yearlyLimit      Float?          // days per year, null = unlimited
  isPaid           Boolean @default(true)
  requiresApproval Boolean @default(true)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  company          Company  @relation(fields: [companyId], references: [id])
  leaves           Leave[]

  @@unique([companyId, code])
  @@unique([companyId, name])
}


model Shift {
  id         String    @id @default(uuid())
  companyId  String
  name       String
  startTime  DateTime
  endTime    DateTime
  createdAt  DateTime  @default(now())
  company    Company   @relation(fields: [companyId], references: [id])
  employees  Employee[]
  attendances Attendance[]
}



model AuditLog {
  id        String   @id @default(uuid())
  companyId String
  userId    String
  action    String
  timestamp DateTime @default(now())
  company   Company  @relation(fields: [companyId], references: [id])
  employee  Employee @relation(fields: [userId], references: [id])
}

enum VerificationStatus {
  IN_OFFICE
  REMOTE
  MANUAL_ADJUSTMENT
}

enum Role {
  SUPER_ADMIN
  COMPANY_ADMIN
  COMPANY_HR
  EMPLOYEE
}

enum AttType {
  CHECK_IN
  CHECK_OUT
}

enum LeaveStatus {
  PENDING
  APPROVED
  REJECTED
}